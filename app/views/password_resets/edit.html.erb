<% provide :title,  t(".title") %>
<div class="page-container">
  <div class="container">
    <div class="row">
      <div class="span12 main-listing form-login">
        <div class="inner">
          <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
            <h1 class="h1_title"><%= t(".title") %></h1>
            <%= render "shared/error_messages" %>
            <%= hidden_field_tag :email, @user.email %>
            <%= f.password_field :password, placeholder: t("helpers.placeholder.user.password") ,class: "form-control" %>
            <%= f.password_field :password_confirmation, placeholder: t("helpers.placeholder.user.password_confirmation"),class: "form-control" %>

            <%= f.submit "Update password", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
