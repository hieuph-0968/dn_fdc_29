<div class="header-wrapper">
  <header>
    <div class="container">
      <div class="logo-container">
        <%= link_to image_tag("logo.png",size: "100x52",alt: "Rails logo"), root_path %>
        <span class="tag-line"><%= link_to t(".title") %></span>
      </div>
      <nav class="main-nav">
        <div class="menu-top-menu-container">
          <ul id="menu-top-menu" class="clearfix">
            <li> <%= form_tag do  %>
                <%= search_field_tag :search, nil, {placeholder:"Search",class: "search"} %>
              <% end %>
            </li>
            <li class="current-menu-item"><%= link_to  t(".home"), root_path  %></li>
            <% if logged_in? %>
              <li><%= link_to t(".user"), users_path, class: "nav-link" %></li>
              <li><%= link_to t(".activity") %></li>
              <li class="dropdown">
                <%= link_to t(".link_dropdown_html"), "#", "data-toggle" => "dropdown" %>
                <ul class="dropdown-menu">
                  <li><%= link_to t(".profile"), current_user %></li>
                  <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t(".logout"), logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class = "nav-item"><%= link_to t(".sign_in"), login_path, class: "nav-link" %></li>
             <li class = "nav-item"><%= link_to t(".sign_up"), signup_path, class: "nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
   </header>
</div>

